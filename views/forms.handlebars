<main>

    {{! DIV- Formulario }}

    <div class="container">

        <div class="row">

            <div class="col-6 offset-3">

                <form action="/register" method="post" enctype="multipart/form-data">

                    <input type="text" name="nome" class="form-control" placeholder="Nome do produto">
                    <input type="number" name="valor" class="form-control" placeholder="Valor do produto">
                    <input type="file" name="imagem" class="form-control">
                    <input type="submit" class="btn-person_1" value="Cadastrar">


                </form>

            </div>
        </div>
    </div>

    {{! DIV - Listagem de produtos}}

    <div class="container">

        <div class="row">

            <!-- Dentro do loop que exibe os produtos -->
            {{#each produtos}}
            <div class="col-12 col-sm6 col-md-4 col-lg-3">

                <div class="card">
                    <img class="imagem_produto" src="/src/images/{{imagem}}">

                    <div class="texts">
                        <p class="nome_produto">{{nome}}</p>
                        <p class="valor_produto">R$ {{valor}}</p>

                        <!-- Rating Section -->
                        <div class="rating" id="rating-{{id_produto}}">
                            <input value="5" name="rating-{{id_produto}}" id="star5-{{id_produto}}" type="radio">
                            <label for="star5-{{id_produto}}"></label>
                            <input value="4" name="rating-{{id_produto}}" id="star4-{{id_produto}}" type="radio">
                            <label for="star4-{{id_produto}}"></label>
                            <input value="3" name="rating-{{id_produto}}" id="star3-{{id_produto}}" type="radio">
                            <label for="star3-{{id_produto}}"></label>
                            <input value="2" name="rating-{{id_produto}}" id="star2-{{id_produto}}" type="radio">
                            <label for="star2-{{id_produto}}"></label>
                            <input value="1" name="rating-{{id_produto}}" id="star1-{{id_produto}}" type="radio">
                            <label for="star1-{{id_produto}}"></label>
                        </div>

                    </div>

                    <a href="/editForms/{{id_produto}}" class="btn btn-person_alter">Alterar</a>
                    <a href="/remover_produto/{{id_produto}}&{{imagem}}" class="btn btn-person_remove">Remover</a>
                </div>
            </div>
            {{/each}}



        </div>
    </div>


</main>